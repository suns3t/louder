<% if current_user.id != user.id %>
<div class="media" style="border-bottom: #31b0d5 1px solid;">
    <a class="media-left" href="#">
        <%= image_tag user.image_url_or_default , alt: user.name, class: "media-object" %>
    </a>
    <div class="media-body">
        <h4 class="media-heading"><%= user.name %></h4>
        <%= user.email %>  
        <% if current_user.friendships.exists?(friend_id: user.id) %>
        <%= link_to "Remove", friendship_path(id: user.id), :method => :delete, class: "text-danger" %>
        <% else %>
        <%= link_to "Add Friend", friendships_path(friend_id: user.id), :method => :post, class: "text-primary" %>
        <% end %>
        
    </div>
</div>
<% end %>