<div class="signup-form">   
    <div class="card">
        <div class="card-header">
            <h2 class="text-xs-center">Sign In Here</h2>
        </div>
        <div class="card-block">
            <%= form_tag(sessions_create_path, method: :post, class: "signup-form")  do %>
            <div class="form-group">
                <%= label_tag :email %>
                <%= email_field_tag :email, nil , class: "form-control", required: true %>
            </div>
            <div class="form-group">
                <%= label_tag :password %>
                <%= password_field_tag :password, nil,  class: "form-control", required: true %>
            </div>
            <%= submit_tag "Sign In", class: "btn btn-primary form-control"%>
            <% end %>
            <hr>
            <div class: "form-group">
                <label>Or sign up with your Facebook account?</label>
                <a class="btn btn-secondary form-control", href="/auth/facebook">Log In with Facebook</a>
            </div>
            
        </div>
    </div>
</div>